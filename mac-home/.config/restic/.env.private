RESTIC_PASSWORD_COMMAND='security find-generic-password -w -a lhr -s restic_repo_password_v2'

# ---- restic 备份策略默认值（可按需修改）----
# 启动条件：默认仅接电运行；若需在电池上运行，将 ALLOW_ON_BATTERY 设为 1 并设置阈值
ALLOW_ON_BATTERY=0
MIN_BATTERY=40

# 防睡策略：默认仅接电时 caffeinate；若在电池上也要防睡，设为 1（谨慎，费电）
CAFFEINATE_ON_BATTERY=0

# 运行中优雅终止：低电量或从接电切到电池时（且策略不允许）优雅退出
LOW_BATTERY_STOP=1
STOP_BATTERY=20
MONITOR_INTERVAL=60
STOP_ON_AC_LOSS=1
STOP_EXIT_ZERO=1

# 干跑模式：1=只打印将执行的命令，不真正备份（常用于测试）
DRY_RUN=0
